@model IEnumerable<MVC_VIDEOS.juegos>

@{
    ViewBag.Title = "Index";
}

<!-- Search Bar -->
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <form class="form-inline" action="@Url.Action("Search","Games")" method="post">
        <input name="cedula" class="form-control mr-sm-2" type="text" placeholder="Cedula">
        <button class="btn btn-success" type="submit">Buscar</button>
    </form>
</nav>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_juego }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_juego }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_juego })
            </td>
        </tr>
    }

</table>
